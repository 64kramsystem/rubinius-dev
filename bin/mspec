#!/usr/bin/env ruby
 
ENV["CI_FILES"] = ['spec/ruby/1.8/core',
                   'spec/ruby/1.8/language',
                   'spec/compiler',
                   'spec/ruby/1.8/library',
                   # parser specs cause odd problems with library
                   # specs, so they go last
                   'spec/parser',
                   ].join(" ") unless ENV["CI_FILES"]
ENV["TAGS_DIR"] = File.expand_path('spec/tags') unless ENV["TAGS_DIR"]

load 'mspec/bin/mspec'
