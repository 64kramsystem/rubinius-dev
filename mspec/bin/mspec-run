#!/usr/bin/env ruby

require 'optparse'
require 'spec/spec_helper'
require 'mspec/bin/options'

opts = SpecOptions.new "run", "", 24, "   "
opts.add_formatters
opts.add_filters
opts.add_verbose
opts.add_verify
opts.add_help

patterns = opts.parse
config = opts.config

if patterns.empty?
  puts "No files specified."
  puts opts
  exit
end

files = []
patterns.each do |item|
  stat = File.stat(File.expand_path(item))
  files << item if stat.file?
  files.concat(Dir[item+"/**/*_spec.rb"].sort) if stat.directory?
end

MSpec.register_tags_path ENV["TAGS_DIR"]
MSpec.register_files files
opts.config.register

MSpec.process
exit MSpec.retrieve(:exit).to_i
